<p id="notice"><%= notice %></p>

<h5>Listing Videos</h5>
<!-- %
=begin %-->
<%= link_to new_video_path, :class => 'btn-floating btn-large waves-effect waves-light red' do %>
  <!--<i class="mdi-content-add"></i>-->
  <i class="material-icons">add</i>
<% end %>
<ul class="collapsible" data-collapsible="accordion">
  <% @videos.each do |video| %>
    <li>
      <div class="collapsible-header">
        <i class="mdi-av-my-library-books"></i>
        <%= link_to video.title, video %>
        <span class="right">
          <%= link_to edit_video_path(video) do %>
            <!--<i class="mdi-content-create"></i>-->
            <i class="large material-icons">mode_edit</i>
          <% end %>
          <%= link_to video, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="mdi-notification-event-busy"></i>
          <% end %>
        </span>
      </div>
      <div class="collapsible-body"><p><%= video.description %></p></div>
    </li>
  <% end %>
</ul>
<!-- %
=end %-->